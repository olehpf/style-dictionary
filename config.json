{
    "showFileHeader": "customFileHeader",
    "source": ["tokens/**/*.json"],
    "platforms": {
        "scss": {
            "transformGroup": "scss",
            "prefix": "core-ui",
            "buildPath": "styles/",
            "files": [
                {
                    "destination": "scss/color.scss",
                    "format": "scss/variables",
                    "options": {
                        "showFileHeader": "customFileHeader",
                        "outputReferences": true
                    },
                    "filter": "isColor"
                },
                {
                    "destination": "scss/font.scss",
                    "format": "scss/variables",
                    "options": {
                        "showFileHeader": "customFileHeader",
                        "outputReferences": true
                    },
                    "filter": "isFont"
                },
                {
                    "destination": "scss/breakpoint.scss",
                    "format": "scss/variables",
                    "options": {
                        "showFileHeader": "customFileHeader",
                        "outputReferences": true
                    },
                    "filter": "isBreakpoint"
                },
                {
                    "destination": "scss/spacing.scss",
                    "format": "scss/variables",
                    "options": {
                        "showFileHeader": "customFileHeader",
                        "outputReferences": true
                    },
                    "filter": "isSpacing"
                },
                {
                    "destination": "scss/opacity.scss",
                    "format": "scss/variables",
                    "options": {
                        "showFileHeader": "customFileHeader",
                        "outputReferences": true
                    },
                    "filter": "isOpacity"
                }      
            ]
        }
    }
}